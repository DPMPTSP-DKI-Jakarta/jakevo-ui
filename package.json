{
  "name": "jakevo-ui",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "yarn prettier",
      "git add -A",
      "tsdx lint"
    ]
  },
  "scripts": {
    "lerna": "lerna",
    "dev": "lerna run start --stream --parallel",
    "test": "lerna run test --",
    "lint": "lerna run lint -- --fix",
    "build": "lerna run build",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,md,mdx,css,scss,json}'",
    "changeset": "changeset",
    "release": "changeset publish",
    "prepublish": "lerna run prepublish"
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.7",
    "tsdx": "^0.14.1",
    "typescript": "^4.5.4",
    "eslint-config-tsdx": "^0.2.0",
    "@changesets/changelog-github": "^0.2.7",
    "@changesets/cli": "^2.10.3",
    "release": "6.0.1"
  }
}
